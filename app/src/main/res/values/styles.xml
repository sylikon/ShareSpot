<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/SteelBlue</item>
        <item name="colorPrimaryDark">@color/MarciaBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/GreenYellow</item>

    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/White</item>
        <item name="colorControlActivated">@color/WhiteSmoke</item>
        <item name="colorControlHighlight">@color/WhiteSmoke</item>
    </style>


    <style name="buttonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">@color/SteelBlue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
